<!DOCTYPE html>
<html>
    <head>
        <title>The Generics | Store</title>
        <meta name="description" content="This is the description">
        <link rel="stylesheet" href="styles.css" />
        <script src="https://js.stripe.com/v3/"></script>
        <link rel="stylesheet" type="text/css" href="./payment.css"  />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <script >
            var stripePublicKey = '<%= stripePublicKey%>'
        </script>
        <script src="store2.js" defer></script>
    </head>
    <body>
        <header class="header">
            <nav class="main-nav nav">
                <ul>
                    <li><a href="index.html">HOME</a></li>
                    <li><a href="store">STORE</a></li>
                    <li><a href="about.html">ABOUT</a></li>
                </ul>
            </nav>
            <h1 class="band-name band-name-large">The BackStreeT</h1>
        </header>
        <section class="container content-section">
            <h2 class="section-header">MUSIC</h2>
            <div class="shop-items">
                <% items.music.forEach(function(item){ %> 
                    <div class="shop-item" data-item-id="<%= item.id %>">
                        <span class="shop-item-title"><%= item.name %></span>
                        <img class="shop-item-image" id="<%= item.id %>" src="Images/<%= item.imgName %>" >
                        <div class="shop-item-details">
                            <span class="shop-item-price">$<%= item.price / 100 %></span>
                            <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                        </div>
                    </div>
                <% }) %>
            </div>        
        </section>
        <section class="container content-section">
            <h2 class="section-header">MERCH</h2>
            <div class="shop-items">
                <% items.merch.forEach(function(item){ %> 
                    <div class="shop-item" data-item-id="<%= item.id %>">
                        <span class="shop-item-title"><%= item.name %></span>
                        <img class="shop-item-image" id="<%= item.id %>" src="Images/<%= item.imgName %>"  >
                        <div class="shop-item-details">
                            <span class="shop-item-price">$<%= item.price / 100 %></span>
                            <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
        <section class="container content-section">
            <h2 class="section-header">CART</h2>
            <div class="cart-row">
                <span class="cart-item cart-header cart-column">ITEM</span>
                <span class="cart-price cart-header cart-column">PRICE</span>
                <span class="cart-quantity cart-header cart-column">QUANTITY</span>
            </div>
            <div class="cart-items">
            </div>
            <div class="cart-total" id="cart">
                <strong class="cart-total-title">Total</strong>
                <span class="cart-total-price">$0</span>
            </div>
            <button class="btn btn-primary btn-purchase" type="button">PURCHASE</button>
            <div id="paymentform" style="width: 75%; margin-left: auto; margin-right: auto; display: none;">
                <div class="cell example example2" id="example-2">
                    <form  id="payment-form">
                    <div data-locale-reversible>
                        <div class="row">
                            <div class="field half-width">
                                <input id="example2-name" data-tid="elements_examples.form.name_placeholder" class="input empty" type="text" placeholder="Andrew" required="" autocomplete="address-line1">
                                <label for="example2-name" data-tid="elements_examples.form.name_label">Name</label>
                                <div class="baseline"></div>
                            </div>
                            <div class="field half-width">
                                <input id="example2-surname" data-tid="elements_examples.form.surname_placeholder" class="input empty" type="text" placeholder="Jordan" required="" autocomplete="address-line1">
                                <label for="example2-surname" data-tid="elements_examples.form.surname_label">Surname</label>
                                <div class="baseline"></div>
                            </div>
                        </div>
                        <div class="row">
                        <div class="field">
                            <input id="example2-address" data-tid="elements_examples.form.address_placeholder" class="input empty" type="text" placeholder="185 Berry St" required="" autocomplete="address-line1">
                            <label for="example2-address" data-tid="elements_examples.form.address_label">Address</label>
                            <div class="baseline"></div>
                        </div>
                        </div>
                        <div class="row" data-locale-reversible>
                        <div class="field threequarter-width">
                            <input id="example2-city" data-tid="elements_examples.form.city_placeholder" class="input empty" type="text" placeholder="San Francisco" required="" autocomplete="address-level2">
                            <label for="example2-city" data-tid="elements_examples.form.city_label">City</label>
                            <div class="baseline"></div>
                        </div>
                        <div class="field quarter-width">
                            <input id="example2-zip" data-tid="elements_examples.form.postal_code_placeholder" class="input empty" type="text" placeholder="94107" required="" autocomplete="postal-code">
                            <label for="example2-zip" data-tid="elements_examples.form.postal_code_label">ZIP</label>
                            <div class="baseline"></div>
                        </div>
                        </div>
                        <div class="row">
                        <div class="field threequarter-width">
                            <input id="example2-country" data-tid="elements_examples.form.country_placeholder" class="input empty" type="text" placeholder="USA" required="" autocomplete="address-line1">
                            <label for="example2-country" data-tid="elements_examples.form.country_label">State/Country</label>
                            <div class="baseline"></div>
                        </div>
                        <div class="field quarter-width">
                            <input id="example2-code" data-tid="elements_examples.form.code_placeholder" class="input empty" type="text" placeholder="US" required="" autocomplete="address-level1">
                            <label for="example2-code" data-tid="elements_examples.form.code_label">Code</label>
                            <div class="baseline"></div>
                        </div>
                        </div>
                        <div class="row">
                            <div class="field">
                                <input id="example2-mail" data-tid="elements_examples.form.mail_placeholder" class="input empty" type="text" placeholder="bryan@gmail.com" required="" autocomplete="address-line1">
                                <label for="example2-mail" data-tid="elements_examples.form.mail_label">Mail</label>
                                <div class="baseline"></div>
                        </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="field">
                        <div id="example2-card-number" class="input empty"></div>
                        <label for="example2-card-number" data-tid="elements_examples.form.card_number_label">Card number</label>
                        <div class="baseline"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="field half-width">
                        <div id="example2-card-expiry" class="input empty"></div>
                        <label for="example2-card-expiry" data-tid="elements_examples.form.card_expiry_label">Expiration</label>
                        <div class="baseline"></div>
                        </div>
                        <div class="field half-width">
                        <div id="example2-card-cvc" class="input empty"></div>
                        <label for="example2-card-cvc" data-tid="elements_examples.form.card_cvc_label">CVC</label>
                        <div class="baseline"></div>
                        </div>
                    </div>
                    <button type="submit" data-tid="elements_examples.form.pay_button" id="card-button">Pay $25</button>
                    <p id="payment-result"><!-- we'll pass the response from the server here --></p>        
                    </form>
                    <script type="text/javascript" src="./payment.js"></script>
        
              </div>
        </section>
        <footer class="main-footer">
            <div class="container main-footer-container">
                <h3 class="band-name">The BackStreeT</h3>
                <ul class="nav footer-nav">
                    <li>
                        <a href="https://www.youtube.com" target="_blank">
                            <img src="Images/soundcloud-white.png">
                        </a>
                    </li>
                    <li>
                        <a href="https://open.spotify.com/" target="_blank">
                            <img src="Images/Spotify Logo.png">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.facebook.com" target="_blank">
                            <img src="Images/Facebook Logo.png">
                        </a>
                    </li>
                </ul>
            </div>
        </footer>
    </body>
    <script>
       
        let imgs = document.getElementsByClassName("shop-item-image");

        for (var i = 0; i < imgs.length; i++) {
                  
             imgs[i].addEventListener("mouseover", function() {
                if(this.getAttribute("id") == 1) {
                    this.setAttribute("src", "/Images/tracklist.png")
                }

                if(this.getAttribute("id") == 2){
                    this.setAttribute("src", "/Images/parental.jpeg")
                }

                if(this.getAttribute("id") == 3){
                    this.setAttribute("src", "/Images/tshirt-back.jpeg")
                }  

                if(this.getAttribute("id") == 4){
                    this.setAttribute("src", "/Images/hoodieback1-grey.jpeg")
                }  

            })

            imgs[i].addEventListener("mouseout", function() {
                if(this.getAttribute("id") == 1) {
                    this.setAttribute("src", "/Images/album2.jpg");
                  }

                  if(this.getAttribute("id") == 2) {
                    this.setAttribute("src", "/Images/album1.jpg");
                  }

                  if(this.getAttribute("id") == 3){
                    this.setAttribute("src", "/Images/tshirt-front.jpeg")
                }  

                if(this.getAttribute("id") == 4){
                    this.setAttribute("src", "/Images/hoodie1-grey.jpeg")
                }  

            })
            
        }
        
        let buttons = document.getElementsByClassName("btn btn-primary shop-item-button");
        const target = document.getElementById("cart")
        for (var i = 0; i < buttons.length; i++) {
            buttons[i].addEventListener('click', function(){
                 target.scrollIntoView({
                    block: 'start',
                    behavior: 'smooth',
                    inline: 'nearest'
                });
            });
        }
      
    </script>
</html>